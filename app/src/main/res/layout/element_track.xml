<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/bg_screen_default"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/track_poster"
        android:layout_height="@dimen/track_poster"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/track_poster"
            android:layout_width="@dimen/track_poster"
            android:layout_height="@dimen/track_poster"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_track_placeholder"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/track_name"
            android:textSize="@dimen/txt_size_settings_screen"
            android:textColor="@color/txt_default"
            android:ellipsize="end"
            tools:text="Smells Like Teen Spirit"
            style="@style/text_view_track"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/track_artist"
                    android:textColor="@color/txt_track_author"
                    android:textSize="@dimen/track_artist"
                    android:ellipsize="end"
                    android:drawableEnd="@drawable/ic_ellipse"
                    android:drawablePadding="5dp"
                    tools:text="Nirvana"
                    style="@style/text_view_track"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/track_time"
                    android:textColor="@color/txt_track_author"
                    android:textSize="@dimen/track_artist"
                    android:layout_marginStart="5dp"
                    tools:text="0:00"
                    style="@style/text_view_track"
                    />

            </LinearLayout>

        </LinearLayout>

    <ImageView
        android:id="@+id/search_clear_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/ic_arrow_track"
        />

</LinearLayout>
